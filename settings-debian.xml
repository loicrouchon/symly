<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 https://maven.apache.org/xsd/settings-1.0.0.xsd">
    <!--
        apt update
        apt install openjdk-17-jdk-headless maven maven-debian-helper libpicocli-java -y
    -->
    <localRepository>/usr/share/maven-repo</localRepository>
    <offline>true</offline>
    <profiles>
        <profile>
            <id>debian</id>
            <properties>
                <packager>debian</packager>
                <picocli.version>debian</picocli.version>
                <junit.version>debian</junit.version>
                <maven-clean-plugin.version>3.2.0</maven-clean-plugin.version>
                <maven-resources-plugin.version>3.3.0</maven-resources-plugin.version>
                <maven-compiler-plugin.version>3.10.1</maven-compiler-plugin.version>
                <maven-surefire-plugin.version>2.22.3</maven-surefire-plugin.version>
                <maven-jar-plugin.version>3.3.0</maven-jar-plugin.version>
            </properties>
        </profile>
    </profiles>
    <activeProfiles>
        <activeProfile>debian</activeProfile>
    </activeProfiles>
</settings>