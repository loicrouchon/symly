<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.1
                        https://maven.apache.org/xsd/assembly-2.1.1.xsd">
    <id>debian</id>
    <formats>
        <format>dir</format>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <files>
        <file>
            <source>${project.basedir}/LICENSE</source>
        </file>
        <file>
            <source>${project.basedir}/tools/packaging/debian/assembly/usr/bin/symly</source>
            <outputDirectory>usr/bin</outputDirectory>
            <filtered>true</filtered>
            <fileMode>0755</fileMode>
        </file>
        <file>
            <source>${project.build.directory}/${project.artifactId}-${project.version}.jar</source>
            <outputDirectory>usr/share/java</outputDirectory>
            <destName>symly.jar</destName>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/src/docs/resources/manpage/manpage</directory>
            <outputDirectory>usr/share/man/man1</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
