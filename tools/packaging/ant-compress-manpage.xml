<project default="manpage">
    <target name="manpage">
        <copy todir="${manpage.manpage.gz.dir}">
            <fileset dir="${manpage.manpage.dir}" />
        </copy>

        <apply executable="gzip" parallel="false">
            <fileset dir="${manpage.manpage.gz.dir}" />
        </apply>
    </target>
</project>
