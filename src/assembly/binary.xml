<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.1
                        https://maven.apache.org/xsd/assembly-2.1.1.xsd">
    <id>binary</id>
    <formats>
        <format>dir</format>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <files>
        <file>
            <source>${project.basedir}/LICENSE</source>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/src/assembly/binary</directory>
            <outputDirectory />
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/docs/manpage</directory>
            <outputDirectory>doc</outputDirectory>
            <includes>
                <include>manpage/**</include>
                <include>html/**</include>
            </includes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
</assembly>
